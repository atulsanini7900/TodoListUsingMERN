<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todo App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="mt-3 text-primary" align="center">TODO APP</h1>

    <!-- Navbar -->
<nav class="navbar bg-body-tertiary mt-3">
    <div class="container ">
      <p class="navbar-brand text-success text-opacity-200" >Add Task</p>
      <p class="navbar-brand text-success" >Category</p>
      <p class="navbar-brand text-success" >Date</p>
    </div>
  </nav>

<div class="mt-5 ms-3 me-md-3">
  <form action="/add/todo/Category/date" method="post">
    <div class="input-group mb-4">
       <!-- //input box -->
        <input type="text" name="todo" class="form-control" placeholder="What do you need to do?" aria-label="Username">
        
        <!-- category options -->
        <select class="form-select mx-2" name="Category" aria-label="Default select example">
            <option selected value="Personal">Personal</option>
            <option value="WORK">WORK</option>
            <option value="School">School</option>
            <option value="Home">Home</option>
            <option value="Office">Office</option>
            <option value="Other">Other</option>

          </select>

          <!-- choose the date -->
           <input type="date" name="date" required>
            <input type="submit"  class="btn btn-success mx-2"id="add" value="ADD TASK">
         
          </div>

        </form>


  
        <h1 align="center">TASKS LIST</h1>


</div>

<ul class="list-group my-5 ms-3 me-md-3">
  <% todo.forEach(todos => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center" style="margin-bottom: 0.5rem;">
      <span style="font-weight: bold; font-size: 1.2rem;"><%= todos.todo %></span>
      <span class="badge bg-primary text-light" style="font-size: 0.9rem;"><%= todos.Category %></span>
      <span class="badge bg-secondary text-light" style="font-size: 0.9rem;"><%= todos.date %></span>
      <a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a>
    </li>
  <% }) %>
</ul>




    <!-- bootstrap link -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>